---
import Container from '@/components/ui/Container.astro';
import Layout from '@/layouts/Layout.astro';
import ProfileLayout from '@/layouts/ProfileLayout.astro';
import { CustomersDataTable } from '@/components/Admin/CustomersDataTable';
import { requireAdminAuth } from '@/lib/auth-utils';
import AdminBreadcrumbs from '@/components/Admin/AdminBreadcrumbs.astro';

const authResult = await requireAdminAuth(Astro);
if (authResult instanceof Response) {
  return authResult;
}
---

<Layout title="Customers">
  <ProfileLayout>
    <Container width="marginy">
      <AdminBreadcrumbs
        items={[{ label: 'Customers' }]}
        pageTitle="Customer Management"
        pageDescription="View and manage customer accounts"
      />
      <div class="card bg-base-100 shadow-sm w-full">
        <div class="card-body">
          <CustomersDataTable client:only="react" />
        </div>
      </div>
    </Container>
  </ProfileLayout>
</Layout>
